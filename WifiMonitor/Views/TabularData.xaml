<UserControl x:Class="WifiMonitor.Views.TabularData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WifiMonitor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="lv" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lv_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Time"  Width="120" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Signal"  Width="120" DisplayMemberBinding="{Binding Signal}"/>
                    <GridViewColumn Header="Channel" Width="120" DisplayMemberBinding="{Binding Channel}"/>
                    <GridViewColumn Header="Security mode"  Width="120" DisplayMemberBinding="{Binding SecurityMode}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
